---
import Section from "../Section.astro";

import { education } from "@cv";
---

<Section title="Bildungsweg">
  <ul>
    {
      education.map(({ institution, Abschluss, startDate, endDate }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : "Aktuell";
        const years = `${startYear} - ${endYear}`;

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a title={`Name ${institution}`} target="_blank">
                      {institution}
                    </a>
                  </h3>
                  <h4>{Abschluss}</h4>
                </div>

                <time>{years}</time>
              </header>

              <footer />
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
    margin-top: 5px;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }
</style>
