---
import { basics } from "@cv";
import Section from "@/components/Section.astro";
import Mail from "@/icons/Mail.astro";
import Phone from "@/icons/Phone.astro";
import GitHub from "@/icons/GitHub.astro";
import WorldMap from "@/icons/WorldMap.astro";

const { name, label, location, profiles, phone, image, email } = basics;
const { city, region } = location;

const SOCIAL_ICONS: Record<string, any> = {
  GitHub,
};

const printInfo = [email, phone].filter(Boolean).join(" â€¢ ");
---

<Section>
  <div class="container">
    <div class="info">
      <h1>{name}</h1>
      <h2>{label}</h2>

      <span>
        <WorldMap />
        {city}, {region}
      </span>
      <footer class="print">
        {printInfo}
      </footer>
      <footer class="no-print">
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Senden sie eine E-mail an ${name} an die E-Mail-Adresse ${email}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Mail />
            </a>
          )
        }
        {
          phone && (
            <a
              href={`tel:${phone}`}
              title={`Rufen sie an ${name} am ${phone}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              <Phone />
            </a>
          )
        }
        {
          profiles.map(({ network, username, url }) => {
            const Icon = SOCIAL_ICONS[network];

            return (
              <a
                href={url}
                title={`Besuchen Sie das Profil von ${name} auf ${network}`}
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon />
              </a>
            );
          })
        }
        <button id="btnCrearPdf" title="als PDF speichern">PDF</button>
        <div class="print-info">
          {printInfo}
        </div>
      </footer>
    </div>
    <figure>
      <img src="/src/layouts/yo.jpg" alt={name} />
    </figure>
  </div>
  <div
    id="additionalInfoContainer"
    class="additional-info-container"
    style="display: none;"
  >
    <p>E-mail: sttevan21@gmail.com</p>
    <p>HandyNr: 017657997392</p>
  </div>
</Section>

<style>
  .container {
    margin-top: 50px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.05rem;
    padding-right: 32px;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    color: #444;
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  img {
    aspect-ratio: 1 / 1;
    object-fit: cover;
    width: 128px;
    border-radius: 16px;
  }
  span {
    color: #666;
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  footer {
    color: #555;
    font-size: 0.65rem;
    display: flex;
    gap: 4px;
    margin-top: 8px;
    
  }

  footer a {
    color: #777;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #eee;
    padding: 4px;
    height: 22px;
    width: 22px;
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  footer a:hover {
    background: #eee;
    border: 1px solid #ddd;
  }
  #btnCrearPdf {
    color: #555;
    font-size: 0.65rem;
    display: flex;
    gap: 4px;
    margin-top: 8px
    align-items: center;
    justify-content: center;
    border: 1px solid #eee;
    padding: 9px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all 0.3s ease;
    background-color:#fff;
  }

  #btnCrearPdf:hover {
    background: #eee;
    border: 1px solid #ddd;
  }
  .no-print .print-info {
    visibility: hidden;
  }
</style>
